{
  "name": "LP58",
  "version": "1.0.0",
  "description": "",
  "author": "oti",
  "license": "MIT",
  "repository": "git@github.com:oti/lp58.git",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm-run-all -p watch server",
    "sass": "node-sass src/style/style.scss docs/assets/style/style.css --indent-width 2",
    "autoprefixer": "postcss --use autoprefixer -r docs/assets/style/style.css",
    "ejs": "ejs-cli --base-dir src/html/pages --file '**/**.ejs' --out docs/ --options site.json",
    "server": "browser-sync start --server docs/ --files docs/ --port '3000'",
    "clean": "rimraf docs/**/*",
    "copy:what-input": "cpx 'node_modules/what-input/dist/what-input.min.js' 'docs/assets/script/'",
    "copy:jquery": "cpx 'node_modules/jquery/dist/jquery.min.js' 'docs/assets/script/'",
    "build": "npm run clean & npm-run-all -p build:* & npm run ejs & npm-run-all -p copy:*",
    "build:sass": "npm-run-all sass autoprefixer",
    "build:js": "uglifyjs src/script/script.js --compress -o docs/assets/script/script.js",
    "build:image": "imagemin src/image/* -o docs/assets/image",
    "watch": "npm-run-all -p watch:*",
    "watch:sass": "chokidar 'src/style/' -pc 'npm run build:sass'",
    "watch:js": "chokidar 'src/script/' -pc 'npm run build:js'",
    "watch:ejs": "chokidar 'src/html/' -pc 'npm run ejs'",
    "watch:image": "chokidar 'src/image/' -i '**/*.DS_Store' -c 'npm run build:image'"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 10",
    "Android >= 4",
    "iOS >= 7"
  ],
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "browser-sync": "^2.24.7",
    "chokidar-cli": "^1.2.1",
    "cpx": "^1.5.0",
    "ejs-cli": "^2.0.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.9.3",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.1",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "easing-sass-function": "^1.1.0",
    "jquery": "^3.3.1",
    "smooth-gradient-sass-function": "^1.0.0",
    "what-input": "^5.1.2"
  }
}
